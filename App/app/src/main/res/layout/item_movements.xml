<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/ic_border"
    android:padding="0dp" >

    <TextView
            android:id="@+id/mov"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="18dp"
            android:ellipsize="end"
            android:fontFamily="@font/mandali"
            android:singleLine="true"
            android:text="Actividad:"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
        android:id="@+id/mov_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_alignBottom="@id/mov"
        android:layout_toEndOf="@id/mov"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/mandali"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_below="@+id/mov"
            android:ellipsize="end"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/mandali"
            android:singleLine="true"
            android:text="date"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_below="@+id/date"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/mandali"
        android:singleLine="true"
        android:text="time"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <View
        android:id="@+id/separator"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/time"
        android:layout_toEndOf="@id/mov"
        android:layout_marginStart="8dp"
        android:background="@drawable/ic_separator"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/golpe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/date"
        android:ellipsize="end"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/mandali"
        android:singleLine="true"
        android:text="Tipo de Golpe:"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/golpe_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/date"
        android:layout_toEndOf="@id/golpe"
        android:singleLine="true"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/mandali"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/time"
        android:ellipsize="end"
        android:layout_marginStart="150dp"
        android:fontFamily="@font/mandali"
        android:singleLine="true"
        android:text="Dispositivo:"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/device_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@id/time"
        android:layout_toEndOf="@id/device"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/mandali"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="14sp" />

</RelativeLayout>

